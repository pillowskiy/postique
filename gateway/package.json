{
    "name": "gateway",
    "version": "1.0.0",
    "main": "./src/index.js",
    "type": "module",
    "imports": {
        "#shared/*": "./src/shared/*",
        "#api/*": "./src/api/*",
        "#lib/*": "./src/lib/*"
    },
    "scripts": {
        "dev:prepare": "npm run types && npm run build",
        "dev:start": "DEBUG=express:router:router,express:router,express:application,express:view node src/index.js",
        "dev": "NODE_ENV=development nodemon --config nodemon.local.json",
        "dev:deploy": "NODE_ENV=development nodemon --config nodemon.deploy.json",
        "build": "gulp",
        "start": "node src/index.js",
        "purgecss": "node scripts/purgecss.js --content './views/**/*.ejs' --css './public/**/*.css' --output ./public/styles/postique.min.css",
        "types": "npm run types:views",
        "types:views": "node scripts/safeviews/index.js --dir views --output src/views.d.ts --engine ejs",
        "lint": "eslint --debug src/",
        "lint:write": "eslint --debug src/ --fix",
        "lint:ejs": "./node_modules/.bin/ejslint views/",
        "format": "prettier --write .",
        "tidy": "depcheck"
    },
    "author": "pillowskiy",
    "license": "MIT",
    "devDependencies": {
        "@babel/preset-env": "^7.26.9",
        "@trivago/prettier-plugin-sort-imports": "^5.2.2",
        "@types/express": "^5.0.0",
        "@types/node": "^22.13.4",
        "@types/pino": "^7.0.4",
        "depcheck": "^1.4.7",
        "ejs-lint": "^2.0.1",
        "eslint": "^8.57.1",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-config-prettier": "^10.0.1",
        "eslint-plugin-import": "^2.31.0",
        "eslint-plugin-prettier": "^5.2.3",
        "gulp": "^5.0.0",
        "gulp-autoprefixer": "^9.0.0",
        "gulp-babel": "^8.0.0",
        "gulp-changed": "^5.0.2",
        "gulp-clean": "^0.4.0",
        "gulp-clean-css": "^4.3.0",
        "gulp-rename": "^2.0.0",
        "gulp-sass": "^6.0.0",
        "gulp-uglify": "^3.0.2",
        "minimist": "^1.2.8",
        "nodemon": "^3.1.9",
        "prettier": "^3.5.1",
        "prettier-plugin-ejs": "^1.0.3",
        "purgecss": "^7.0.2",
        "sass": "^1.85.0",
        "tree-sitter": "^0.21.1",
        "tree-sitter-javascript": "^0.23.1"
    },
    "dependencies": {
        "@postique/pb": "file:../contracts/gen/js",
        "awilix": "^12.0.4",
        "bootstrap": "^5.3.3",
        "compression": "^1.8.0",
        "ejs": "^3.1.10",
        "express": "^4.21.2",
        "express-validator": "^7.2.1",
        "gulp-purgecss": "^7.0.2",
        "helmet": "^8.0.0",
        "pino": "^9.6.0",
        "pino-pretty": "^13.0.0"
    }
}
