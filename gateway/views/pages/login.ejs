<div class="container mt-5">
    <h2>Login</h2>

    <%= message %>

    <form hx-post="/login" hx-target="#message" class="mt-3">
        <div class="mb-3">
            <label for="username" class="form-label">Username</label>
            <input
                type="text"
                id="username"
                name="username"
                class="form-control"
                required
            />
        </div>

        <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input
                type="password"
                id="password"
                name="password"
                class="form-control"
                required
            />
        </div>

        <button type="submit" class="btn btn-primary">Login</button>
    </form>

    <div id="message"></div>
</div>
