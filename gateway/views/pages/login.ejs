<div class="container mt-5">
    <h2>Login</h2>

    <form hx-post="/login" hx-target="this" hx-swap="none" class="mt-3">
        <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input type="email" id="email" name="email" class="form-control" />
            <p id="error-email" class="d-none"></p>
        </div>

        <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input
                type="password"
                id="password"
                name="password"
                class="form-control"
            />
            <p id="error-password" class="d-none"></p>
        </div>

        <button type="submit" class="btn btn-primary">Login</button>
    </form>
</div>
