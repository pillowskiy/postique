<div hx-swap-oob="beforeend:#toasts">
    <div
        id="liveToast"
        class="toast"
        role="alert"
        aria-live="assertive"
        aria-atomic="true"
        data-bs-autohide="true"
        data-bs-delay="2000"
    >
        <div class="toast-header">
            <div
                class="rounded me-2 text-white"
                style="width: 20px; height: 20px; background: black"
            ></div>
            <strong class="me-auto"><%= initiator %></strong>
            <button
                type="button"
                class="btn-close"
                data-bs-dismiss="toast"
                aria-label="Close"
            ></button>
        </div>
        <div class="toast-body"><%= message %></div>
    </div>
</div>
