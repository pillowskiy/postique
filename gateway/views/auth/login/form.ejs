<form
    class="h-100 row align-items-center"
    hx-post="/login"
    hx-target="this"
    hx-swap="none"
>
    <div>
        <h2>Hello, Again</h2>
        <p class="lead">We are happy to have you back!</p>

        <input type="hidden" name="csrfToken" value="<%= csrfToken %>" />
        <div class="form-outline mb-4">
            <label class="form-label" for="loginName">Email</label>
            <input
                type="email"
                id="loginName"
                name="email"
                class="form-control"
            />
            <small id="error-email" class="d-none"></small>
        </div>

        <div class="form-outline mb-4">
            <label class="form-label" for="loginPassword">Password</label>
            <input
                type="password"
                id="loginPassword"
                name="password"
                class="form-control"
            />
            <small id="error-password" class="d-none"></small>
        </div>
    </div>

    <div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-check">
                    <input
                        class="form-check-input"
                        type="checkbox"
                        value=""
                        id="rememberMe"
                        name="rememberMe"
                        checked
                    />
                    <label class="form-check-label" for="rememberMe">
                        Remember me
                    </label>
                </div>
            </div>
        </div>

        <button
            type="submit"
            class="btn btn-primary d-block w-100 text-center"
            style="margin: 8px 0"
        >
            Sign in
        </button>

        <small>Need an account? <a href="/register">Sign up</a></small>
    </div>
</form>
