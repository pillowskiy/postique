<form hx-post="/login" hx-target="this" hx-swap="none" class="mb-4">
    <div class="form-outline mb-4">
        <label class="form-label" for="loginName">Email</label>
        <input type="email" id="loginName" name="email" class="form-control" />
        <small id="error-email" class="d-none"></small>
    </div>

    <div class="form-outline mb-4">
        <label class="form-label" for="loginPassword">Password</label>
        <input
            type="password"
            id="loginPassword"
            name="password"
            class="form-control"
        />
        <small id="error-password" class="d-none"></small>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="form-check mb-3 mb-md-0">
                <input
                    class="form-check-input"
                    type="checkbox"
                    value=""
                    id="rememberMe"
                    name="rememberMe"
                    checked
                />
                <label class="form-check-label" for="rememberMe">
                    Remember me
                </label>
            </div>
        </div>
    </div>

    <button type="submit" class="btn btn-primary d-block w-100 mb-3">
        Sign in
    </button>

    <div class="text-center">
        <p>Not a member? <a href="/register">Register</a></p>
    </div>
</form>
