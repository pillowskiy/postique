<small id="error-username" class="form-error" hx-swap-oob="true">
    <% if (errors && errors.username) { %> <%= errors.username %> <% } %>
</small>

<small id="error-email" class="form-error" hx-swap-oob="true">
    <% if (errors && errors.email) { %> <%= errors.email %> <% } %>
</small>

<small id="error-password" class="form-error" hx-swap-oob="true">
    <% if (errors && errors.password) { %> <%= errors.password %> <% } %>
</small>

<small id="error-password-confirm" class="form-error" hx-swap-oob="true">
    <% if (errors && errors.passwordConfirm) { %> <%= errors.passwordConfirm %>
    <% } %>
</small>
